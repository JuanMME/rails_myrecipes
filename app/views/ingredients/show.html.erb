<div class="container">
    <%= render "shared/page_title", title: @ingredient.name %>

    <div class="row">
        <div class="col-12 mt-4">
            <% if @ingredient.recipes.count != 0 %>
                <h4 class="text-center mb-4">Recipes containing <%= @ingredient.name %></h4>
                <%= render "shared/pagination", obj: @ingredient_recipes %>
                <%= render "recipes/recipe_list", obj: @ingredient_recipes %>
                <%= render "shared/pagination", obj: @ingredient_recipes %>
            <% else %>
                <h4 class="text-center mb-4">No recipes yet</h4>
            <% end %>
        </div>
    </div>
</div>
