<div class="row mb-3">
    <div class="col-md-2">
        <section class="chef-info text-center">
            <%= gravatar_for(comment.chef, size: 60) %>
        </section>
    </div>
    <div class="col-md-8 card">
        <div class="card-body">
            <p><%= comment.description %></p>
            <p class="mb-0"><small>Created: <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.chef.chefname %></small></p>
        </div>
    </div>
</div>
