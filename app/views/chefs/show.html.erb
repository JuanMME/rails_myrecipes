<div class="container">
    <%= render "shared/page_title", title: "Chef #{@chef.chefname}'s profile" %>

    <div class="row">
        <div class="col-md-4 offset-md-4 text-center">
            <%= gravatar_for @chef, size: 150 %>
        </div>
        <div class="col-12 mt-4">
            <% if @chef.recipes.count != 0 %>
                <h4 class="text-center mb-4"><%= @chef.chefname %>'s recipes</h4>
                <%= render "shared/pagination", obj: @chef_recipes %>
                <%= render "recipes/recipe_list", obj: @chef_recipes %>
                <%= render "shared/pagination", obj: @chef_recipes %>
            <% else %>
                <h4 class="text-center mb-4">No recipes yet</h4>
            <% end %>
        </div>
    </div>
</div>
