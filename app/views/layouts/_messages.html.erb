<div class="container mt-3">
    <div class="row">
        <div class="col-10 offset-1">
            <% flash.each do |name, msg| %>
                <div class="alert alert-<%= name %>">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <%= msg %>
                </div>
            <% end %>
        </div>
    </div>
</div>
