<% if obj.errors.any? %>
    <div class="row">
        <div class="col-sm-8 offset-sm-2">
            <div class="alert alert-danger">
                <h6>
                    <%= pluralize(obj.errors.count, "error") %>
                    prohibited this <%= obj.class %> from being saved:
                </h6>
                <div>
                    <ul>
                        <% obj.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% end %>
